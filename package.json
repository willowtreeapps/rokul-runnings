{
  "name": "@willowtreeapps/rokul-runnings",
  "version": "0.3.0",
  "description": "Library to send automated commands to a Roku",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha -r ts-node/register test/*.ts",
    "build": "tsc --build --clean && tsc",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willowtreeapps/rokul-runnings.git"
  },
  "keywords": [
    "roku",
    "robot",
    "framework",
    "automation",
    "willowtree"
  ],
  "author": {
    "name": "WillowTree, LLC",
    "email": "opensource@willowtreeapps.com"
  },
  "contributors": [
    {
      "name": "Aaron Goff",
      "email": "aaron@willowtreeapps.com"
    },
    {
      "name": "Hunter McMillen",
      "email": "hunter.mcmillen@willowtreeapps.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "form-data": "^3.0.0",
    "indigestion": "^0.1.3",
    "pm2": "^4.2.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.10",
    "@types/form-data": "^2.5.0",
    "@types/mocha": "^7.0.2",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@types/xml-js": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.0.1",
    "lint-staged": "^9.5.0",
    "mocha": "^7.0.1",
    "nock": "^11.7.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.3",
    "xml-js": "^1.6.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint && npm test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/willowtreeapps/rokul-runnings/issues"
  },
  "homepage": "https://github.com/willowtreeapps/rokul-runnings"
}
